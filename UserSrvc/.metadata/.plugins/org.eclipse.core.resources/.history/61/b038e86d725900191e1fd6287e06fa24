public class UserSrvcExtImpl implements UserSrvcExt {

	public static void main(String...args) {
		final String uri = "http://localhost:7001/usvc/user/get";
	    EmailToken entity = new EmailToken("dapibus@in.net", "[B@d077e31");

		extRestCall(uri, entity, new UUser());

	}
	
	private static <E,R> R extRestCall(String uri, E entity, R returned) {
	     
	    RestTemplate restTemplate = new RestTemplate();
	     
	    HttpHeaders headers = new HttpHeaders();
	    headers.setAccept(Arrays.asList(MediaType.APPLICATION_JSON));

   		R result = (R) restTemplate.postForObject(uri, entity, returned.getClass());
	    return result;
	}
	
	
	public abstract UUser loginUser(@RequestBody UUser user) throws PropertyValueException, AccessDeniedException;
	public abstract UUser getUser(@RequestBody UUser user);
	public abstract void update(@RequestBody UUser user) throws PropertyValueException, AccessDeniedException;
	public abstract UUser authinticateUser(@RequestBody UUser user) throws AccessDeniedException;
	public abstract void updatePassword(@RequestBody UUser user) throws PropertyValueException, AccessDeniedException;
	public abstract void resetPassword(UserUrl userUrl);

