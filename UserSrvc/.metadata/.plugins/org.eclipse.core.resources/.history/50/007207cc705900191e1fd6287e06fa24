package com.timetracker.service;

import java.nio.file.AccessDeniedException;

import org.hibernate.PropertyValueException;
import org.springframework.web.bind.annotation.RequestBody;

import com.timetracker.jpa.entity.User;
import com.timetracker.jpa.entity.secondary.UUser;
import com.timetracker.jpa.entity.secondary.UserUrl;

public interface UserSrvcExt {
	public UUser extLoginUser(@RequestBody User user) throws PropertyValueException, AccessDeniedException;
	public UUser extGetUser(@RequestBody User user);
	public UUser extUpdate(@RequestBody User user) throws PropertyValueException, AccessDeniedException;
	public UUser extAuthinticateUser(@RequestBody User user) throws AccessDeniedException;
	public void extUpdatePassword(@RequestBody User user) throws PropertyValueException, AccessDeniedException;
	public void extResetPassword(UserUrl userUrl);
}
