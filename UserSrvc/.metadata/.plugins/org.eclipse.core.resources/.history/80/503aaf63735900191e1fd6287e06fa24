package com.userSrvc.client.services;

import java.nio.file.AccessDeniedException;

import org.hibernate.PropertyValueException;
import org.springframework.boot.autoconfigure.security.SecurityProperties.User;
import org.springframework.web.bind.annotation.RequestBody;

import com.userSrvc.client.entities.UUser;
import com.userSrvc.client.entities.UserUrl;

public interface UserSrvcExt {
	public UUser loginUser(UUser user) throws PropertyValueException, AccessDeniedException;
	public UUser getUser(UUser user);
	public UUser update(UUser user) throws PropertyValueException, AccessDeniedException;
	public UUser authinticateUser(UUser user) throws AccessDeniedException;
	public void updatePassword(UUser user) throws PropertyValueException, AccessDeniedException;
	public void resetPassword(UserUrl userUrl);
}
